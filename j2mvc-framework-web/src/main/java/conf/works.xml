<?xml version="1.0" encoding="UTF-8"?>
<works>
	
	<DataSources>
		<DataSource 
			name="jdbc/j2mvcexample" 
			driverClassName="com.mysql.jdbc.Driver" 
			username="exmaple"
			password="exmaplepassword" 
			maxIdle="2"
			maxWait="5000" 
			maxActive="100"
			initialSize="1"
			url="jdbc:mysql://127.0.0.1/j2mvc_example" />
	</DataSources>
	
	<init-params>
		<init-param>
			<name>sqlLog</name>
			<description>输入SQL日志</description>
			<value>true</value>
		</init-param>
	</init-params>
</works>